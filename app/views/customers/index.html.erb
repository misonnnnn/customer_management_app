<% content_for :title, "Customers" %>
  <div>
    <p style="color: green"><%= notice %></p>
    <div class="mb-3">
      <h6 class="my-2 text-center">CUSTOMERS</h6>
    </div>

    <div id="customers">
      <% if @customers.any? %>
        <% @customers.each do |customer| %>
          <%= render customer %>
          <p>
            <%= link_to "Show this customer", customer, class: "btn btn-sm btn-outline-primary" %>
          </p>
        <% end %>
      <% else %>
        <div class="alert alert-default mt-3" role="alert">
          No customers have been added yet.
        </div>
      <% end %>
    </div>

    <!-- <%= link_to "New Customer", new_customer_path, class: "btn btn-sm btn-primary mt-3" %> -->
  </div>
</div>




